@{
    ViewBag.Title = "Home";
}
<br /><br /><br />
<div class="container">
    <h5>Please, enter client credentials, car information and problem information:</h5>
    @using (Ajax.BeginForm("Create", "Home", new AjaxOptions { UpdateTargetId = "updated" }))
    {
    <table>
        <tr>
            <td>client name:</td>
            <td><input type="text" class="form-control" name="name" /></td>
        </tr>
        <tr>
            <td>phone number:</td>
            <td><input type="text" class="form-control" name="pnum" /></td>
        </tr>
        <tr>
            <td>car model:</td>
            <td><input type="text" class="form-control" name="model" /></td>
        </tr>
        <tr>
            <td>car distribution year:</td>
            <td><input type="text" class="form-control" name="year" /></td>
        </tr>
        <tr>
            <td>car number:</td>
            <td><input type="text" class="form-control" name="cnum" /></td>
        </tr>
        <tr>
            <td>problem info:</td>
            <td><textarea class="form-control-sm" name="pinfo" cols="40" rows="9"></textarea></td>
        </tr>
        <tr>
            <td><input type="submit" value="submit" /></td>
        </tr>
    </table>
    }
    <div id="updated"></div>
</div>
@Scripts.Render("~/scripts/js/jquery-3.3.1.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")